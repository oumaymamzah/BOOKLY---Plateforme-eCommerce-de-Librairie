{% extends 'base.html.twig' %}

{% block title %}Ouvrier{% endblock %}

{% block body %}
    <div>
    <a href="{{ path('app_ouvrier_new') }}"><span class="btn btn-primary"><i class="fa fa-plus">&nbsp;</i>Nouveau</span></a>
</div><br>

    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Daten</th>
                <th>Salaire</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ouvrier in ouvriers %}
            <tr>
                <td>{{ ouvrier.id }}</td>
                <td>{{ ouvrier.nom }}</td>
                <td>{{ ouvrier.prenom }}</td>
                <td>{{ ouvrier.daten ? ouvrier.daten|date('Y-m-d') : '' }}</td>
                <td>{{ ouvrier.salaire }}</td>
                <td>
  <a href="{{ path('app_ouvrier_show', {'id': ouvrier.id}) }}"><span class="btn btn-default">   <i class="fa fa-eye"></i></span>
  
  </a>

  <a href="{{ path('app_ouvrier_edit', {'id': ouvrier.id}) }}" ><span class="btn btn-success"> <i class="fa fa-edit"></i></span>
    
   
  </a>

  <a href="{{ path('app_ouvrier_delete', {'id': ouvrier.id}) }}"> <span class="btn btn-danger"><i class="fa fa-trash-o"></i></span>
    

  </a>
</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

   {% endblock %}
